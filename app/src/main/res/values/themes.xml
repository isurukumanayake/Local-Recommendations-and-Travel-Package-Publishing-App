<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MadMiniProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="roundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="bottomRoundImageView" parent="">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="text_input_modifier">
        <item name="colorControlNormal">@color/primary_color</item>
        <item name="colorControlActivated">@color/primary_color</item>
    </style>


    <style name="RoundCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">17dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="RoundCornersLayout2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="HMLDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

</resources>