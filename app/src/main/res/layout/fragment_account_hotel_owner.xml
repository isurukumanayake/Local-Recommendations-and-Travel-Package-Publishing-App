                    <LinearLayout
                        android:id="@+id/acc_setting_label4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/acc_setting_label"
                        android:layout_marginTop="@dimen/acc_setting_label_margin_top"
                        android:layout_marginRight="@dimen/acc_setting_label_margin_right"
                        android:layout_marginBottom="@dimen/acc_setting_label_margin_bottom"
                        android:layout_marginLeft="@dimen/acc_setting_label_margin_left"
                        android:padding="@dimen/acc_setting_label_padding">

                        <ImageView
                            android:layout_width="@dimen/acc_setting_img_width"
